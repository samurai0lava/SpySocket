{
	"files.associations": {
		"*.hpp": "cpp",
		"*.cpp": "cpp",
		"*.conf": "nginx"
	},
	"C_Cpp.default.cppStandard": "c++98",
	"C_Cpp.default.compilerPath": "/usr/bin/c++",
	"C_Cpp.default.includePath": [
		"${workspaceFolder}/inc",
		"${workspaceFolder}/include"
	],
	"C_Cpp.default.defines": [],
	"C_Cpp.errorSquiggles": "enabled",
	"editor.formatOnSave": false,
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"C_Cpp.intelliSenseEngine": "default",
	"C_Cpp.configurationWarnings": "enabled",
	"terminal.integrated.defaultProfile.linux": "zsh",
	"code-runner.executorMap": {
		"cpp": "cd $dir && make && ./webserv config/config.conf"
	},
	"files.exclude": {
		"**/*.o": true,
		"**/*.a": true,
		"**/webserv": false
	},
	"search.exclude": {
		"**/*.o": true,
		"**/*.a": true,
		"**/log/*": true
	},
	"C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, UseTab: ForIndentation, ColumnLimit: 100 }",
	"makefile.configureOnOpen": false
}

