$(OBJDIR)/%.o: src/%.cpp | $(OBJDIR)
	@mkdir -p $(dir $@)
	$(CC) $(FLAGS) -c $< -o $@

clean:
	@rm -rf	 $(OBJDIR)

fclean: clean
	@rm -rf $(NAME)
	@echo "$(YELLOW)Objs and webserv has been successfully removed.$(RESET)"

run: all clean
	@./$(NAME)

re: fclean all	

.PHONY: all clean fclean re run
.SECONDARY: $(OBJS)

