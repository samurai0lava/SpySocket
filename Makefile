%.o: %.cpp
	$(CC) $(FLAGS) -c $< -o $@

clean:
	@rm -rf	 $(OBJS)

fclean: clean
	@rm -rf $(NAME)

run: all clean
	@./$(NAME)

re: fclean all	

.PHONY: all clean fclean re run
.SECONDARY: $(OBJS)

