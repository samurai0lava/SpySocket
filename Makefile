CC = c++

FLAGS = -Wall -Wextra -Werror -std=c++98 -g

SRCS = src/main.cpp \
	src/Parsing/parsing_request.cpp\
	src/Config.cpp\
	src/server.cpp\
	src/singleserver.cpp\
	src/Parsing/utils/utils.cpp\
	src/MethodHandler.cpp\
	src/Methods/Get.cpp\
	src/utils/RespondError.cpp\
	src/Methods/DELETE.cpp\
	src/utils/ft_time.cpp\
	src/POST/pwist.cpp src/POST/match_location.cpp src/POST/unchunk.cpp\
	src/CClient.cpp src/POST/messages.cpp\
	src/utils/log_gen.cpp\
	src/CGI/cgi.cpp src/CGI/cgi_utils.cpp




OBJDIR = obj
OBJS = $(SRCS:src/%.cpp=$(OBJDIR)/%.o)

NAME = webserv

RED = \033[0;31m
YELLOW = \033[0;33m
BLUE = \033[0;34m
MAGENTA = \033[0;35m
CYAN = \033[0;36m
WHITE = \033[0;37m
RESET = \033[0m

all: $(OBJDIR) $(NAME)

$(OBJDIR):
	@mkdir -p $(OBJDIR)

$(NAME): $(OBJS)
	$(CC) $(FLAGS) -o $(NAME) $(OBJS)
